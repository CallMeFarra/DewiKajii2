<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tab1Fragment"
    android:background="@color/cream">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:src="@drawable/homepage"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atraksi"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/buttonAtraksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:backgroundTint="@color/cream"
                    android:layout_margin="10dp"
                    android:text="More Information"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:src="@drawable/senja"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket Wisata"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/buttonWisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:backgroundTint="@color/cream"
                    android:layout_margin="10dp"
                    android:text="More Information"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:src="@drawable/katalogikan"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Katalog Ikan"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/buttonIkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:backgroundTint="@color/cream"
                    android:layout_margin="10dp"
                    android:text="More Information"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:src="@drawable/gerobaksapi"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homestay"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/buttonHomestay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:backgroundTint="@color/cream"
                    android:layout_margin="10dp"
                    android:text="More Information"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>