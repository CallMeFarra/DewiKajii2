                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/homestaychanna" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="150dp"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="Homestay Channa menawarkan kenyamanan tinggal selama 2 hari 1 malam dengan harga spesial hanya Rp 200 ribu per malam untuk maksimal 4 orang. Dapatkan fasilitas lengkap yang membuat liburanmu tak terlupakan."
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>